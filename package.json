{
  "name": "plantilla-prettier-eslint",
  "version": "1.0.0",
  "private": true,
  "description": "Plantilla base con Prettier + ESLint (flat) + Husky + lint-staged.",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "fmt": "prettier . --write",
    "fmt:check": "prettier . --check",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "prettier": "^3.3.0",
    "eslint": "^9.0.0",
    "@eslint/js": "^9.0.0",
    "globals": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,md,html,css,scss}": [
      "prettier --write"
    ]
  }
}
